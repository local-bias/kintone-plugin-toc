{
  "name": "kintone-plugin-toc",
  "version": "1.0.0",
  "author": "ribbit",
  "license": "MIT",
  "scripts": {
    "init": "plugin init && plugin genkey",
    "build:css-desktop": "pnpm dlx @tailwindcss/cli -i ./src/styles/desktop.css -o ./.plugin/contents/desktop.css --minify",
    "build:css-config": "pnpm dlx @tailwindcss/cli -i ./src/styles/config.css -o ./.plugin/contents/config.css --minify",
    "build:js": "plugin build",
    "build": "concurrently \"pnpm:build:*\" && plugin zip",
    "standalone": "concurrently \"pnpm:build:*\" && plugin zip --env standalone",
    "dev:js": "plugin dev --ppk C:/workspaces/apps/kintone-plugin/dev.ppk --cert-dir C:/workspaces/apps/cert",
    "dev:css-desktop": "pnpm dlx @tailwindcss/cli -i ./src/styles/desktop.css -o ./.plugin/dev/desktop.css --watch",
    "dev:css-config": "pnpm dlx @tailwindcss/cli -i ./src/styles/config.css -o ./.plugin/dev/config.css --watch",
    "dev": "concurrently \"pnpm:dev:*\""
  },
  "browser": {
    "path": false
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@kintone/rest-api-client": "6.0.0",
    "@konomi-app/kintone-utilities": "^5.17.0",
    "@konomi-app/kintone-utilities-react": "^2.1.0",
    "@konomi-app/ui": "^2.3.0",
    "@konomi-app/ui-react": "^2.0.0",
    "@lb-ribbit/kintone-secrets": "0.3.0",
    "@lb-ribbit/kintone-xapp": "0.4.0",
    "@mui/icons-material": "7.3.4",
    "@mui/material": "7.3.4",
    "clsx": "^2.1.1",
    "immer": "10.2.0",
    "jotai": "^2.15.0",
    "jotai-eager": "^0.2.3",
    "jotai-effect": "^2.1.3",
    "jotai-optics": "^0.4.0",
    "lucide-react": "^0.553.0",
    "luxon": "3.7.2",
    "notistack": "3.0.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-error-boundary": "6.0.0",
    "react-feather": "^2.0.10",
    "remeda": "^2.32.0",
    "tailwind-merge": "^3.4.0",
    "tiny-invariant": "^1.3.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@kintone/dts-gen": "9.0.0",
    "@konomi-app/k2": "^1.12.2",
    "@konomi-app/prettier-config": "^1.1.2",
    "@types/luxon": "3.7.1",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "concurrently": "^9.2.1",
    "dotenv": "17.2.3",
    "tailwindcss": "^4.1.16",
    "ts-loader": "^9.5.4",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3"
  },
  "prettier": "@konomi-app/prettier-config"
}
